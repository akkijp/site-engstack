<aside class="p-aside">
    <div class="p-userinfo">
        <div class="p-userinfo__header">
            <img class="profile-icon" src="/images/jdenticon/icon-01.png" alt="">
            <div class="p-userinfo__screenname">@rorono</div>
        </div>
        <div class="p-userinfo__status">
            <div class="p-userinfo__statusItem">
                <div class="p-userinfo__statusCount"><%= @posts.count %></div>
                <span class="p-userinfo__statuslabel">投稿数</span>
            </div>
            <div class="p-userinfo__statusItem">
                <div class="p-userinfo__statusCount"><%= @consecutive_posts %></div>
                <span class="p-userinfo__statuslabel">継続日数</span>
            </div>
        </div>
    </div>

    <div class="p-ranking">
        <div class="p-ranking__header">
            ランキング
        </div>

        <% if @posts_ranking[0].present? %>
            <div class="p-rankbox">
                <div class="p-rankbox__text">
                    <span class="listmarker"><i class="fas fa-trophy" style="color: #ffc400;"></i></span> <img src="/images/serviceicon/html5.png" alt=""> <%= @posts_ranking[0][0] %>
                </div>
                <div class="p-rankbox__time">
                    <div class="p-rankbox__timeCount"><%= (@posts_ranking[0][1] / 60.0).floor(1) %></div>
                    時間
                </div>
            </div>
        <% end %>

        <% if @posts_ranking[1].present? %>
        <div class="p-rankbox">
            <div class="p-rankbox__text">
                <span class="listmarker"><i class="fas fa-trophy" style="color: #c9c9c9;"></i></span> <img src="/images/serviceicon/css3.png" alt=""> <%= @posts_ranking[1][0] %>
            </div>
            <div class="p-rankbox__time">
                <div class="p-rankbox__timeCount"><%= (@posts_ranking[1][1] / 60.0).floor(1) %></div>
                時間
            </div>
        </div>
        <% end %>

        <% if @posts_ranking[2].present? %>
        <div class="p-rankbox">
            <div class="p-rankbox__text">
                <span class="listmarker"><i class="fas fa-trophy" style="color: #ac6d4d;"></i></span> <img src="/images/serviceicon/javascript.png" alt=""> <%= @posts_ranking[2][0] %>
            </div>
            <div class="p-rankbox__time">
                <div class="p-rankbox__timeCount"><%= (@posts_ranking[2][1] / 60.0).floor(1) %></div>
                時間
            </div>
        </div>
        <% end %>

        <% (4...7).each do |index| %>
            <% if @posts_ranking[index].present? %>
            <div class="p-rankbox">
                <div class="p-rankbox__text">
                    <span class="listmarker"><%= index %></span> <img src="/images/serviceicon/docker.png" alt="">  <%= @posts_ranking[index][0] %>
                </div>
                <div class="p-rankbox__time">
                    <div class="p-rankbox__timeCount"><%= (@posts_ranking[index][1] / 60.0).floor(1) %></div>
                    時間
                </div>
            </div>
            <% end %>
        <% end %>
    </div>
</aside>
