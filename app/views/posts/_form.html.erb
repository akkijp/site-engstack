<div class="container mt-5">
    <%= form_with(model: post) do |f| %>
        <div class="form-group">
            <h2>① - 今日勉強したこと</h2>
            <div class="form-row">
                <div class="col-6">
                    <%= f.select :person_id, Category.all.collect { |p| [ p.name, p.id ] }, {}, {class: 'form-control'} %>
                </div>
                <div class="col-1 d-flex justify-content-center align-items-center"><i class="fas fa-long-arrow-alt-right"></i></div>
                <div class="col-5">
                    <%= f.select :person_id, [
                      ['0.5時間', 30],
                      ['1時間', 60],
                      ['1.5時間', 90],
                      ['2時間', 120],
                      ['2.5時間', 150],
                      ['3時間', 180],
                      ['3.5時間', 210],
                      ['4時間', 240],
                      ['4.5時間', 270],
                      ['5時間', 300],
                      ['5.5時間', 330],
                      ['6時間', 360],
                      ['6.5時間', 390],
                      ['7時間', 420],
                      ['7.5時間', 450],
                      ['8時間', 480],
                    ], {}, {class: 'form-control'} %>
                </div>
            </div>
        </div>
        <h2>② - 今日の一言</h2>
        <div class="form-group">
            <%= f.text_area :content, class: "form-control", rows: "5", placeholder: '今日は〇〇と××の勉強をしたけれど、□□の部分が難しくわからなかった。要復習' %>
        </div>

        <button type="submit" class="btn btn-primary">送信</button>
    <% end %>
</div>


